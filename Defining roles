local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "Shadow_System"
ScreenGui.Parent = CoreGui
ScreenGui.ResetOnSpawn = false

local function ShowShadowNotif()
    local NotifFrame = Instance.new("Frame")
    NotifFrame.AutomaticSize = Enum.AutomaticSize.XY
    NotifFrame.Size = UDim2.new(0, 0, 0, 0)
    NotifFrame.Position = UDim2.new(1, 50, 1, -100)
    NotifFrame.BackgroundColor3 = Color3.fromRGB(5, 0, 0)
    NotifFrame.BorderSizePixel = 0
    NotifFrame.Parent = ScreenGui

    local NotifCorner = Instance.new("UICorner")
    NotifCorner.CornerRadius = UDim.new(0, 15)
    NotifCorner.Parent = NotifFrame

    local NotifStroke = Instance.new("UIStroke")
    NotifStroke.Thickness = 3
    NotifStroke.Color = Color3.fromRGB(255, 0, 0)
    NotifStroke.Parent = NotifFrame

    local UIPadding = Instance.new("UIPadding")
    UIPadding.PaddingLeft = UDim.new(0, 25)
    UIPadding.PaddingRight = UDim.new(0, 25)
    UIPadding.PaddingTop = UDim.new(0, 12)
    UIPadding.PaddingBottom = UDim.new(0, 12)
    UIPadding.Parent = NotifFrame

    local UIListLayout = Instance.new("UIListLayout")
    UIListLayout.Parent = NotifFrame
    UIListLayout.FillDirection = Enum.FillDirection.Horizontal
    UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    UIListLayout.VerticalAlignment = Enum.VerticalAlignment.Center
    UIListLayout.Padding = UDim.new(0, 15)

    local SkullImage = Instance.new("ImageLabel")
    SkullImage.Size = UDim2.new(0, 40, 0, 40)
    SkullImage.BackgroundTransparency = 1
    SkullImage.Image = "rbxassetid://6031245000"
    SkullImage.ImageColor3 = Color3.fromRGB(255, 0, 0)
    SkullImage.Parent = NotifFrame

    local NotifText = Instance.new("TextLabel")
    NotifText.AutomaticSize = Enum.AutomaticSize.XY
    NotifText.BackgroundTransparency = 1
    NotifText.Text = "BY SHADOW"
    NotifText.TextColor3 = Color3.fromRGB(255, 0, 0)
    NotifText.Font = Enum.Font.Creepster
    NotifText.TextSize = 30
    NotifText.Parent = NotifFrame

    task.spawn(function()
        while NotifFrame.Parent do
            TweenService:Create(NotifStroke, TweenInfo.new(0.8), {Thickness = 5, Color = Color3.fromRGB(130, 0, 0)}):Play()
            task.wait(0.8)
            TweenService:Create(NotifStroke, TweenInfo.new(0.8), {Thickness = 3, Color = Color3.fromRGB(255, 0, 0)}):Play()
            task.wait(0.8)
        end
    end)

    task.wait(0.1)
    local finalWidth = NotifFrame.AbsoluteSize.X
    NotifFrame:TweenPosition(UDim2.new(1, -(finalWidth + 30), 1, -100), "Out", "Back", 0.6, true)
    
    task.delay(4, function()
        NotifFrame:TweenPosition(UDim2.new(1, 50, 1, -100), "In", "Sine", 0.6, true)
        task.wait(0.6)
        NotifFrame:Destroy()
    end)
end


IconButton.Size = UDim2.new(0, 70, 0, 70)
IconButton.Position = UDim2.new(0.05, 0, 0.4, 0)
IconButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
IconButton.BorderSizePixel = 0
IconButton.Image = "rbxassetid://99980570935687"
IconButton.ScaleType = Enum.ScaleType.Crop
IconButton.Active = true
IconButton.Draggable = true
IconButton.Parent = ScreenGui

local IconCorner = Instance.new("UICorner")
IconCorner.CornerRadius = UDim.new(1, 0)
IconCorner.Parent = IconButton

local IconStroke = Instance.new("UIStroke")
IconStroke.Thickness = 3
IconStroke.Color = Color3.fromRGB(255, 0, 0)
IconStroke.Parent = IconButton

RunService.RenderStepped:Connect(function(deltaTime)
    IconButton.Rotation = IconButton.Rotation + (90 * deltaTime)
end)

IconButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
end)

local function Infiltrate(target, role)
    local remotes = {}
    for _, v in pairs(ReplicatedStorage:GetDescendants()) do
        if v:IsA("RemoteEvent") or v:IsA("RemoteFunction") then
            table.insert(remotes, v)
        end
    end

    local roleKey = (role == "murder" and "Murderer") or (role == "sheriff" and "Sheriff") or "Innocent"

    for _, remote in pairs(remotes) do
        task.spawn(function()
            remote:FireServer("SetRole", target, roleKey)
            remote:FireServer("RequestRole", roleKey)
            remote:FireServer("ForceRole", target, roleKey)
            remote:FireServer("UpdateRole", roleKey)
        end)
    end
end

InjectBtn.MouseButton1Click:Connect(function()
    local name = PlayerInput.Text:lower()
    local role = RoleInput.Text:lower()
    local target = nil

    for _, p in pairs(Players:GetPlayers()) do
        if p.Name:lower():sub(1, #name) == name then
            target = p
            break
        end
    end

    if target then
        InjectBtn.Text = "INJECTING..."
        InjectBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
        
        for i = 1, 50 do
            Infiltrate(target, role)
            task.wait()
        end
        
        task.wait(1)
        InjectBtn.Text = "BYPASS & INJECT ROLE"
        InjectBtn.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
    end
end)

ShowShadowNotif()
-- by Shadow
